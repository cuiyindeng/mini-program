.ub-user_title {
  width: 726rpx;
  margin: 0 auto;
  background: pink;
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
 
.ub-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
 
}
 
.ub-nickName {
  font-size: 48rpx;
  font-weight: 900;
  max-width: 528rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-left: 24rpx;
}
 
 
/* 授权弹窗 */
.ub-get_user {
  margin: 50rpx 0 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
 
.ub-get_user .avatar-wrapper {
  padding: 0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  background: transparent;
}
 
.ub-get_user_image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
 
.ub-get_user_image_tip {
  font-size: 24rpx;
  color: #ccc;
  margin-top: 12rpx;
}
 
.ub-get_user_nickName_box {
  width: 400rpx;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  margin-top: 32rpx;
  padding: 12rpx 0;
}
 
.ub-get_user_nickName_box input {
  width: 100%;
  text-align: center;
}
 
.ub-get_user .ub-button1 {
  margin-top: 48rpx;
}